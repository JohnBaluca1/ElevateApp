<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7855B6"
    tools:context=".AboutUsActivity">

  <TextView
      android:id="@+id/textView2"
      android:layout_width="394dp"
      android:layout_height="36dp"
      android:layout_marginTop="36dp"
      android:gravity="center"
      android:text="John Baluca"
      android:textColor="#363a43"
      android:textSize="25sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView2" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="366dp"
      android:layout_height="332dp"
      android:layout_marginTop="32dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.355"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/logo1" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="394dp"
      android:layout_height="36dp"
      android:layout_marginTop="12dp"
      android:gravity="center"
      android:text="Kissle Marcelo"
      android:textColor="#363a43"
      android:textSize="25sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.47"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView2" />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="394dp"
      android:layout_height="36dp"
      android:layout_marginTop="16dp"
      android:gravity="center"
      android:text="Gerard Nicolas"
      android:textColor="#363a43"
      android:textSize="25sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.47"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView3" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="394dp"
      android:layout_height="36dp"
      android:layout_marginTop="12dp"
      android:gravity="center"
      android:text="Diwana Nagales"
      android:textColor="#363a43"
      android:textSize="25sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.47"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView4" />

  <pl.droidsonroids.gif.GifImageView
      android:id="@+id/cpgif"
      android:layout_width="331dp"
      android:layout_height="68dp"
      android:layout_marginTop="16dp"
      android:src="@drawable/cp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView5">

  </pl.droidsonroids.gif.GifImageView>

  <TextView
      android:layout_width="394dp"
      android:layout_height="36dp"
      android:gravity="center"
      android:text="MOBDEVT OTIS2"
      android:textColor="#FFFFFF"
      android:textSize="25sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.47"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/cpgif" />

</androidx.constraintlayout.widget.ConstraintLayout>